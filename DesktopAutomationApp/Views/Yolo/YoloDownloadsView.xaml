<UserControl x:Class="DesktopAutomationApp.Views.YoloDownloadsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DesktopAutomationApp.ViewModels"
             xmlns:conv="clr-namespace:DesktopAutomationApp.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Style="{StaticResource ContentViewBase}">

    <UserControl.Resources>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanConverter x:Key="InverseBoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="YOLO Downloads" Style="{StaticResource Heading1}" VerticalAlignment="Center"/>
            <Button Content="âŸ² Refresh" 
                    Command="{Binding RefreshCommand}"
                    Margin="16,0,0,0"
                    Padding="8,4"
                    FontSize="13"/>
        </StackPanel>

        <!-- Modelliste -->
        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Models}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource MahApps.Brushes.Theme.Background}"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Control.Border}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="12,8,12,8"
                                    Padding="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Titel und Status -->
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding StatusText}" 
                                                   FontSize="12"
                                                   Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                                    </StackPanel>

                                    <!-- Buttons -->
                                    <StackPanel Grid.Row="0" Grid.Column="1" 
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Top">
                                        <Button Content="Download"
                                                Command="{Binding DataContext.DownloadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Margin="0,0,8,0"
                                                Padding="12,6"
                                                FontSize="13"
                                                Visibility="{Binding IsInstalled, Converter={StaticResource InverseBoolToVis}}"/>
                                        
                                        <Button Content="Uninstall"
                                                Command="{Binding DataContext.UninstallCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Padding="12,6"
                                                FontSize="13"
                                                Background="{DynamicResource MahApps.Brushes.ValidationSummary5}"
                                                Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>

                                    <!-- Beschreibung -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding Description}"
                                               TextWrapping="Wrap"
                                               Margin="0,8,0,8"
                                               FontSize="13"
                                               Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>

                                    <!-- Detailinfos -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock Text="Model Key:" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding ModelKey}" 
                                                   FontSize="12" 
                                                   FontFamily="Consolas"
                                                   Margin="0,0,16,0"/>
                                        
                                        <TextBlock Text="Size:" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                                   Margin="0,0,8,0"
                                                   Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVis}}"/>
                                        <TextBlock Text="{Binding FileSizeDisplay}" 
                                                   FontSize="12"
                                                   Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>

                                    <!-- Progress Bar -->
                                    <ProgressBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Value="{Binding DownloadProgress}"
                                                 Minimum="0" Maximum="100"
                                                 Height="8"
                                                 Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVis}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
