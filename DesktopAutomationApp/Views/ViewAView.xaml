<UserControl x:Class="DesktopAutomationApp.Views.ViewAView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold"/>
        <Border Grid.Row="1" Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="1"
                CornerRadius="8" Padding="12" Margin="0,12,0,0">
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
