<!-- MainWindow.xaml -->
<mah:MetroWindow x:Class="DesktopAutomationApp.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="DesktopAutomation"
                 MinWidth="900" MinHeight="600"
                 WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Margin="16" Background="{DynamicResource MahApps.Brushes.Theme.Background}">
            <TextBlock Text="Navigation" FontWeight="Bold" Style="{StaticResource Heading2}" Margin="0,0,0,12"/>
            <Button Content="Start" Command="{Binding ShowStart}"         Margin="0,0,0,8"  FontSize="14"/>
            <Button Content="Hotkeys" Command="{Binding ShowListHotkeys}" Margin="0,0,0,8"  FontSize="14"/>
            <Button Content="Makros"  Command="{Binding ShowListMakros}"  Margin="0,0,0,8"  FontSize="14"/>
            <Button Content="Jobs"    Command="{Binding ShowListJobs}"    Margin="0,0,0,16" FontSize="14"/>
        </StackPanel>

        <!-- Content rechts -->
        <Border Grid.Column="1" Padding="16">
            <ContentControl Content="{Binding CurrentContent}"/>
        </Border>
    </Grid>
</mah:MetroWindow>
